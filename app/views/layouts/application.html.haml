!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Shoplist

    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Dosis', media: 'all', 'data-turbolinks-track' => true
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Lato', media: 'all', 'data-turbolinks-track' => true
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true

    = javascript_include_tag 'application', 'data-turbolinks-track' => true

    = csrf_meta_tags
  %body

    %header
      %h1 Shops List
      %ul
        - if user_signed_in?
          %li= link_to "Logout", destroy_user_session_path, method: :delete

    %main
      = notice if notice
      = alert if alert
      = yield
